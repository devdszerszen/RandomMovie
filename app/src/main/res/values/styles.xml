<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="StartScreenButton" parent="DefaultButton">
        <item name="android:layout_width">170dp</item>
    </style>

    <style name="BorderlessButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/borderless_button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="error_desc_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
